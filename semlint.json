{
  "backend": "cursor-cli",
  "budgets": {
    "timeout_ms": 120000
  },
  "output": {
    "format": "text"
  },
  "execution": {
    "batch": false
  },
  "diff": {
    "file_kinds": ["staged", "unstaged", "untracked"],
    "include_globs": ["src/**"],
    "exclude_globs": []
  },
  "security": {
    "secret_guard": true,
    "allow_patterns": [],
    "allow_files": [
      "src/cli.ts",
      "src/secrets.test.ts",
      "src/secrets.ts",
      "semlint.json",
      "README.md"
    ],
    "ignore_files": [".gitignore", ".cursorignore", ".semlintignore"]
  },
  "rules": {
    "disable": [],
    "include_globs": ["src/**/*.ts"],
    "exclude_globs": [],
    "severity_overrides": {
      "SEMLINT_NAMING_001": "warn",
      "SEMLINT_PATTERN_002": "warn",
      "SEMLINT_SWE_003": "warn"
    }
  },
  "backends": {
    "cursor-cli": {
      "executable": "cursor",
      "model": "composer-1.5",
      "args": [
        "agent",
        "{prompt}",
        "--model",
        "{model}",
        "--print",
        "--mode",
        "ask",
        "--output-format",
        "text",
        "--trust"
      ]
    }
  }
}
